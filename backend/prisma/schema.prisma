// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game{
id Int     @id @default(autoincrement())
name        String
maxPlayers  Int
lobbies     Lobby[]
}

model Lobby {
  id                      String    @id
  name                    String
  isPublic                Boolean
  numberOfPlayersInLobby  Int
  status                  String
  game                    Game      @relation(fields: [gameId], references: [id])
  gameId                  Int
  userList                UserList  @relation(fields: [userListId], references: [id])
  userListId              Int       @unique
}

model UserList{
  id    Int     @id
  users User[]
  lobby Lobby?
}

model User{
  id          Int       @id @default(autoincrement())
  pseudo      String
  isInvite    Boolean
  firstname   String?
  lastname    String?
  email       String?
  hashedMDP   String?
  salt        String?
  userList    UserList? @relation(fields: [userListId], references: [id])
  userListId  Int?
}

